#!/bin/sh
alias q=exit
alias c=clear
alias r=ranger
alias e=$EDITOR
alias h='cd ~'
alias p=paccy
alias l.='ls -d .?*'
alias lt='trash-list'
alias la='ls -la'
alias sp='sudo pacman'
alias dir='ls --format=long'
alias duck='sudo du -hs * | sort -rh | head -10' # Find biggest directories
alias ducks='sudo find -type f -exec du -Sh {} + | sort -rh | head -10' # Find biggest files
alias hrun='$(history | cut -c 8- | fzf --tac)'
alias hgrep="history | cut -c 8- | fzf --tac | xclip -i -sel clip"
alias bin='cd ~/.local/bin'
alias config='cd ~/dotfiles/.config'
alias dots='cd ~/dotfiles'
alias bye='([ -f ~/.HAS_UPDATED ] && rm -f ~/.HAS_UPDATED>/dev/null && shutdown now) || systemctl hibernate'


alias keyb='setxkbmap colemak && xmodmap ~/dotfiles/keymaps/xmodColemakCustom && xset r rate 210 30'

# Better flags
alias ls='ls --group-directories-first --color=auto'
alias grep='grep --color=auto'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -iv'
alias mkdir='mkdir -p'

# git
alias g='git'
alias gc='git clone'

# dwm
alias reset='cd ~/dwm/ && git checkout master && make clean && rm -f config.h && git reset --hard origin/master'
alias restart="sudo rm -f /usr/local/bin/dwm && cd ~/dwm/ && git checkout master && git merge config && make clean && sudo make install && pkill dwm"

goto(){
    dir=$(find "${1:-.}" -path '*/\.*' -prune \
        -o -type d -print 2> /dev/null | fzf +m) &&
        cd "$dir"
}
se() { du -a ~/dotfiles/* | awk '{print $2}' | fzf --layout=reverse| xargs -r $EDITOR ;}
# Move to trash
t(){ trash-put $@;}
