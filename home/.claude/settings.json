{
  "cleanupPeriodDays": 365,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Skill",
      "WebSearch",
      "WebFetch",
      "Read(~/go/**)",
      "Read(//var/folders/**)",
      "Read(~/projects/**)",
      "Read(~/dotfiles/**)",
      "Edit(~/projects/**)",
      "Write(~/projects/**)",
      "Bash(mktemp:*)",
      "Bash(cd:*)",
      "Bash(pushd:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(make:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(go:*)",
      "Bash(golangci-lint:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(pwd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(diff:*)",
      "Bash(node:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(kustomize:*)",
      "Bash(kubectl:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr create:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo clone:*)",
      "mcp__gopls__*",
      "mcp__context7__*",
      "mcp__chrome-devtools__*"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/var/folders/"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".go\")) | select(endswith(\"gen.go\") | not)' | xargs -r go run golang.org/x/tools/gopls/internal/analysis/modernize/cmd/modernize@latest -fix"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/status"
  },
  "enabledPlugins": {
    "feature-dev@claude-code-plugins": true,
    "example-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true,
  "model": "haiku"
}
