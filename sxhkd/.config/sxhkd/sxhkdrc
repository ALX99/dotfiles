super + Return
    $TERMINAL

super + d
    dmenu_run

super + b
    $BROWSER

super + p
    pcmanfm

super + shift + q
    qrmake

super + shift + w
    feh --randomize --bg-fill ~/OneDrive/Wallpapers/3440x1440/

super + Alt_L + 1
    setxkbmap us && xmodmap -e 'keycode 135 = Super_R' && notify-send "Keyboard layout: Qwerty"
super + Alt_L + 2
    setxkbmap colemak && xmodmap -e 'keycode 135 = Super_R' && notify-send "Keyboard layout: Colemak-DH"
super + Alt_L + 3
    setxkbmap se && xmodmap -e 'keycode 135 = Super_R' && notify-send "Keyboard layout: Swedish"

# Audio
XF86AudioMute
	amixer sset Master toggle; refbar
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; refbar
