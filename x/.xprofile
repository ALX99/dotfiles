#!/bin/sh
log=/tmp/xLog

# For vscode to work properly with gnome-keyring
eval "$(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)"
export SSH_AUTH_SOCK
. /etc/X11/xinit/xinitrc.d/50-systemd-user.sh

# Move Brave cache to tmpfs
mkdir -p /tmp/BraveSoftware
rm -rf "$XDG_CACHE_HOME/"/BraveSoftware
ln -sf /tmp/BraveSoftware "$XDG_CACHE_HOME"/BraveSoftware

xwallpaper --zoom ~/.config/bg.jpg
xinput set-prop 10 300 1
setxkbmap colemak
xmodmap ~/dotfiles/keymaps/xmodColemakCustom
xrdb ~/.Xresources
xset r rate 210 30

# Start background services
zimple >>$log 2>&1 &    # DWM bar
dunst >>$log 2>&1 &     # Notification service
sxhkd >>$log 2>&1 &     # Hotkey daemon
unclutter >>$log 2>&1 & # Remove mouse
picom -b >>$log 2>&1 &  # X11 compositor
togglepower -m &        # Montitor and change CPU frequency scaling
