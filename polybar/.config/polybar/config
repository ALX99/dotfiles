[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color1:#222}

[bar/bar1]
monitor = ${env:MONITOR:}
width = 100%
height = 24
radius = 0.0
fixed-center = true
margin-top = 0
margin-bottom = 0
bottom = true
separator = |
separator-foreground = ${colors.foreground-alt}

border-top-size = 2
border-color = ${xrdb:color4:#222}

background = ${colors.background}
;background = #7500000000
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-1 = "Ubuntu Nerd Font:style=Regular:size=9:antialias=true;2"
font-0 = "FontAwesome5Free:style=Solid:pixelsize=9:antialias=true;1"

modules-left = i3
modules-center = date 
modules-right = wifi battery xbacklight updates alsa 

tray-position = right
tray-padding = 0

wm-restack = i3

;override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/wifi]
type = internal/network
interface = wlo1 
interval = 30

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = %{A1:nmcli r wifi off && dunstify "Turned off wifi":}Ôá´ %essid%%{A} 
label-disconnected = %{A1:nmcli r wifi on && dunstify "Turned on wifi":}no internet%{A}
label-disconnected-foreground = #f22b2b

[module/updates]
type = custom/script
label =  %output%
format-prefix = "ÔÄ° " 
format-prefix-foreground = ${colors.foreground}
exec = ~/.scripts/polybar/arch_updates
interval = 600
click-left = ~/.scripts/polybar/arch_updates --status
click-right = ~/.scripts/polybar/launch_terminal.sh paccy -Syu

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÓâØ "
format-prefix-foreground = ${colors.foreground-alt}
