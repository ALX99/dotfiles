###################
# Launching stuff #
###################
super + Return
    $TERMINAL

super + d
    dmenu_run

super + b
    $BROWSER

super + c
    code

super + p
    pcmanfm

super + shift + q
    qrmake

super + shift + s
    sc

super + shift + w
    setbg

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Reloaded the SXHKD config file"

super + {1,3}
    setxkbmap {us,se} && xmodmap -e 'keycode 135 = Super_R' && notify-send {"Keyboard layout: Qwerty","Keyboard layout: Swedish"}
super + 2
    setxkbmap colemak && xmodmap ~/dotfiles/keymaps/xmodColemakCustom && xset r rate 210 30 && notify-send "Keyboard layout: Colemak-DH"

##################
# Administration #
##################

# Audio
XF86AudioMute
	amixer sset Master toggle; pkill -RTMIN+30 dwmblocks
XF86Audio{Raise,Lower}Volume
	amixer sset Master 3%{+,-}; pkill -RTMIN+30 dwmblocks

# Brightness
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight {-inc,-dec} 5; -RTMIN+31 dwmblocks


super + F3
    systemctl suspend

super + shift + s
    xset dpms force off
