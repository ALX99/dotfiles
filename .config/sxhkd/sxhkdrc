super + Return
    $TERMINAL

super + d
    dmenu_run

super + b
    $BROWSER

super + c
    code

super + p
    pcmanfm

super + shift + q
    qrmake

super + shift + w
    feh --randomize --bg-fill ~/Wallpapers/

super + Alt_L + 1
    setxkbmap us && xmodmap -e 'keycode 135 = Super_R' && notify-send "Keyboard layout: Qwerty"
super + Alt_L + 2
    setxkbmap colemak && xmodmap ~/dotfiles/keymaps/xmodColemakCustom && xset r rate 210 30 && notify-send "Keyboard layout: Colemak-DH"
super + Alt_L + 3
    setxkbmap se && xmodmap -e 'keycode 135 = Super_R' && notify-send "Keyboard layout: Swedish"

# Audio
XF86AudioMute
	amixer sset Master toggle; refbar
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; refbar

# Brightness
XF86MonBrightnessUp
    xbacklight -inc 5; refbar
XF86MonBrightnessDown
    xbacklight -dec 5; refbar

super + F3
    systemctl suspend
