if [ "${status}" -eq 1 ]; then
	printf "ğŸ”Œ"
else
	case $battery in
	100 | 9[0-9] | 8[3-9]) printf "ï‰€ " ;;
	8[0-2] | 7[0-9] | 6[6-9]) printf "ï‰ " ;;
	6[0-5] | 5[0-9] | 49) printf "ï‰‚ " ;;
	4[0-8] | 3[2-9]) printf "ï‰ƒ " ;;
	3[0-1] | 2[0-9] | 1[5-9]) printf "ï‰ƒ " ;;
	*) printf "ï‰„ " ;;
	esac
fi

printf " %s%%\n" "$battery"
