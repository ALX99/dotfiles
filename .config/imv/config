[options]

# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true
overlay_font = Monospace:16

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]

q = quit
x = close
f = fullscreen
o = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
a = zoom actual
r = reset

# Image navigation
<Left> = prev
<bracketleft> = prev
<Right> = next
<bracketright> = next
gg = goto 1
<Shift+G> = goto -0

# Panning
n = pan 0 -30
e = pan 0 30
m = pan 30 0
i = pan -30 0

# Zooming
<Up> = zoom 1
<plus> = zoom 1
<Shift+Z> = zoom 1
<Down> = zoom -1
<minus> = zoom -1
z = zoom -1

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1



# Set wallpaper
<Shift+B> = exec xwallpaper --zoom  "$imv_current_file"
