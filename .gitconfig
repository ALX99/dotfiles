[alias]
# Shortening aliases
co = checkout
cob = checkout -b
f = fetch
c = commit
p = push
branches = branch -a
remotes = remote -v
bd = branch -d
bD = branch -D
dc = diff --cached
s = status
st = status -sb
a = add
stash = stash save
pop = stash pop
sl = stash list
dt=difftool
mt=mergetool

# Feature improving aliases
amend = commit —amend —reuse-message=HEAD
branch-name = rev-parse --abbrev-ref HEAD
publish = "!git push -u origin $(git branch-name)"
unpublish = "!git push origin :$(git branch-name)"
unstage = reset HEAD
mm = pull origin master:master
# Complex aliases
rank = shortlog -sn --no-merges

[core]
pager = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '
[color]
ui = true
[color "diff-highlight"]
oldNormal = red bold
oldHighlight = red bold 52
newNormal = green bold
newHighlight = green bold 22
[color "diff"]
meta = 11
frag = magenta bold
commit = yellow bold
old = red bold
new = green bold
whitespace = red reverse
[diff-so-fancy]
markEmptyLines = false
[merge]
tool = vscode
[mergetool "vscode"]
cmd = code --wait $MERGED
[diff]
tool = vscode
[difftool "vscode"]
cmd = code --wait --diff $LOCAL $REMOTE
