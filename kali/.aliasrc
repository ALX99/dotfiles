#!/bin/sh

#########
# Basic #
#########
alias q=exit
alias c=clear
alias e=$EDITOR
alias se="sudoedit"
alias ea='$EDITOR ~/.aliasrc'
alias h='cd ~'
alias g='git'
alias gc='git clone'
alias please='sudo !!'
alias cx='chmod +x'

#####################
# Downloading stuff #
#####################
alias getpeas="wget https://raw.githubusercontent.com/carlospolop/privilege-escalation-awesome-scripts-suite/master/linPEAS/linpeas.sh; chmod +x linpeas.sh"
alias getenum="wget https://raw.githubusercontent.com/rebootuser/LinEnum/master/LinEnum.sh; chmod +x LinEnum.sh"

##############
# Navigation #
##############
alias bin='cd ~/dotfiles/bin'
alias dots='cd ~/dotfiles'
alias config='cd ~/dotfiles/.config'

########
# Nmap #
########
# Syn Stealth with OS detection, script scanning and version script scanning
# will save to res.xml
alias nstandard='sudo nmap --top-ports 1500 -sS -O -sC -sV -oX res.xml'

#########
# Hacky #
#########
alias ss='searchsploit'
alias ssres='ss -vx --nmap res.xml'

########
# Misc #
########
alias x='extract'
# Setting my custom keyboard
alias keyb='setxkbmap colemak && xmodmap ~/dotfiles/keymaps/xmodColemakCustom && xset r rate 210 30'
# Compress directory
alias compress='tar cJf archive.tar.xz'
# Screen Off
alias so='xset dpms force off'
# Setup VPN conneciton to htb
alias vpnsetup='sudo openvpn ~/Downloads/ALX99.ovpn'

###############
# Better flags#
###############
alias grep='grep --color=auto'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -iv'
alias mkdir='mkdir -p'
alias free='free -h'
alias df='df -h'
alias upower='upower -i /org/freedesktop/UPower/devices/battery_BAT0'

##########
# Hashes #
##########
alias sha1='openssl sha1'
alias sha256='openssl sha256'

hgrep() {
  print -z $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed -r 's/ *[0-9]*\*? *//' | sed -r 's/\\/\\\\/g')
}
hrun() {
  eval $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed -r 's/ *[0-9]*\*? *//' | sed -r 's/\\/\\\\/g')
}
