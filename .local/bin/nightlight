#!/bin/sh

if pgrep redshift >/dev/null; then
    echo "Turning off the nightlight"
    pkill redshift
else
    if ! ping -q -c 1 -W 1 google.com >/dev/null; then
        echo "No internet connectivity!"
        exit 1
    fi
    echo "Turning on the nightlight"
    loc="$(curl -Ss ipinfo.io | jq -r '.loc' | tr , :)"
    redshift -rl "$loc" &
fi
